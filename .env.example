# BuildMyIdea MVP Environment Variables

# Server Configuration
PORT=3000
NODE_ENV=development

# Stripe Configuration (Sandbox/Test Mode)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe Price ID for $1 submission
STRIPE_PRICE_ID=price_your_price_id_here

# Session Secret
SESSION_SECRET=your-random-session-secret-here

# Database
DB_PATH=./database/bmi.db

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_ANON_MAX=100
RATE_LIMIT_AUTH_MAX=300
RATE_LIMIT_ADMIN_MAX=1000
RATE_LIMIT_STRICT_MAX=5
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-jwt-secret-change-in-production-min-32-chars
JWT_REFRESH_SECRET=your-jwt-refresh-secret-change-in-production-min-32-chars

# Bcrypt Configuration
BCRYPT_ROUNDS=12

# Site Configuration
SITE_URL=http://localhost:3000
SITE_NAME=BuildMyIdea
IDEA_PRICE=100
IDEA_PRICE_DISPLAY="$1"

# Admin Settings
ADMIN_EMAIL=admin@buildmyidea.com
ADMIN_PASSWORD=change_me_immediately
